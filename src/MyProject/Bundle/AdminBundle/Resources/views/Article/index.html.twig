{% extends 'AdminBundle::base.html.twig' %}

{% block content -%}
    <h1>Article list</h1>

    <div class="table-responsive">
        <table class="table table-striped records_list">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Slug</th>
                    <th>Title</th>
                    <th>Updated</th>
                    <th>Active</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for entity in entities %}
                <tr>
                    <td><a href="{{ path('article_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                    <td>{{ entity.slug }}</td>
                    <td>{{ entity.title }}</td>
                    <td>{{ entity.updatedAt|date('m/d/y g:ia') }}</td>
                    <td>
                        {% if entity.active %}
                            <span class="label label-success">
                                <span class="glyphicon glyphicon-ok"></span>
                            </span>
                        {% else %}
                            <span class="label label-danger">
                                 <span class="glyphicon glyphicon-remove"></span>
                            </span>
                        {% endif %}
                    </td>
                    <td>
                        <div class="btn-group">
                            <a class="btn btn-primary btn-sm" href="{{ path('article_show', { 'id': entity.id }) }}">show</a>
                            <a class="btn btn-info btn-sm" href="{{ path('article_edit', { 'id': entity.id }) }}">edit</a>
                        </div>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    <div class="btn-group">
        <a class="btn btn-success" href="{{ path('article_new') }}">Create a new entry</a>
    </div>
{% endblock %}
