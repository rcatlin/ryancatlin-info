{% extends 'AdminBundle::base.html.twig' %}

{% block content -%}
    <h1>Article</h1>

    <table class="table table-striped record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ entity.slug }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ entity.title }}</td>
            </tr>
            <tr>
                <th>Createdat</th>
                <td>{{ entity.createdAt|date('m/d/y g:ia') }}</td>
            </tr>
            <tr>
                <th>Updatedat</th>
                <td>{{ entity.updatedAt|date('m/d/y g:ia') }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ entity.content }}</td>
            </tr>
            <tr>
                <th>Active</th>
                <td>
                    {% if entity.active %}
                        <span class="label label-success">
                            <span class="glyphicon glyphicon-ok"></span>
                        </span>
                    {% else %}
                        <span class="label label-danger">
                             <span class="glyphicon glyphicon-remove"></span>
                        </span>
                    {% endif %}
                </td>
            </tr>
        </tbody>
    </table>

    {{ form_start(delete_form) }}
        <div class="record_actions btn-group">
            <a class="btn btn-primary" href="{{ path('article_edit', { 'id': entity.id }) }}">Edit</a>
            {{ form_widget(
                delete_form.submit, {
                    'attr': {
                        'class': 'btn btn-danger'
                    }
            } ) }}
        </div>
    {{ form_end(delete_form) }}



    <ul class="record_actions pager">
        <li class="previous">
            <a href="{{ path('articles') }}">&larr; Back to the list</a>
        </li>
    </ul>

{% endblock %}
