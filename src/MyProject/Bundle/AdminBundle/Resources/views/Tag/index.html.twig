{% extends 'MainBundle::base.html.twig' %}

{% block content -%}
    <h1>Tag list</h1>

    <table class="table table-striped records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('tags_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td>
                    <div class="btn-group">
                        <a class="btn btn-primary btn-sm" href="{{ path('tags_show', { 'id': entity.id }) }}">show</a>
                        <a class="btn btn-info btn-sm" href="{{ path('tags_edit', { 'id': entity.id }) }}">edit</a>
                    </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="btn-group">
        <a class="btn btn-success" href="{{ path('tag_new') }}">Create a new entry</a>
    </div>
{% endblock %}
