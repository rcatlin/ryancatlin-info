{% extends 'AdminBundle::base.html.twig' %}

{% block content -%}
    <h1>Tag</h1>

    <table class="table table-striped record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
        </tbody>
    </table>

    <div class="record_actions btn-group">
        <a class="btn btn-default" href="{{ path('tags_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </div>

    {{ form(delete_form) }}

    <ul class="record_actions pager">
        <li class="previous">
            <a href="{{ path('tags') }}">&larr;
                Back to the list
            </a>
        </li>
    </ul>

</ul>
{% endblock %}
