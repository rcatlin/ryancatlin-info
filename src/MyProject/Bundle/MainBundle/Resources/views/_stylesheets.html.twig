{% if app.debug %}
    <link href="{{ asset('css/bootstrap.min.css') }}" type="text/css" rel="stylesheet" />
    <link href="{{ asset('css/bootstrap-theme.min.css') }}" type="text/css" rel="stylesheet" />
    <link href="{{ asset('css/font-awesome.min.css') }}" type="text/css" rel="stylesheet" />
    <link href="{{ asset('css/main.css') }}" text="text/css" rel="stylesheet" />
{% else %}
    {% stylesheets
        'css/bootstrap.min.css'
        'css/bootstrap-theme.min.css'
        'css/font-awesome.min.css'
        'css/main.css'
        filter='cssrewrite'
        output="css/compiled/all.css"
     %}
        <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
{% endif %}
