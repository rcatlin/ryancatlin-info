{% extends 'MainBundle::Article/base.html.twig' %}

{% block content -%}
    <h1>Article list</h1>

    <table class="table table-striped records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Slug</th>
                <th>Title</th>
                <th>Created</th>
                <th>Updated</th>
                <th>Preview</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('article_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.slug }}</td>
                <td>{{ entity.title }}</td>
                <td>{{ entity.createdAt|date('m/d/y g:ia') }}</td>
                <td>{{ entity.updatedAt|date('m/d/y g:ia') }}</td>
                <td>{{ entity.content|striptags|slice(0,50)|raw }}</td>
                <td>
                <div class="btn-group">
                    <a class="btn btn-primary btn-sm" href="{{ path('article_show', { 'id': entity.id }) }}">show</a>
                    <a class="btn btn-info btn-sm" href="{{ path('article_edit', { 'id': entity.id }) }}">edit</a>
                </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="btn-group">
        <a class="btn btn-success" href="{{ path('article_new') }}">Create a new entry</a>
    </div>
{% endblock %}
